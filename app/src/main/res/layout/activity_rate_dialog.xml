<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardrating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/primary_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="-140dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beri Review Produk"
                    android:layout_marginVertical="20dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/line"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/bg"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/round_oval"
                        android:layout_marginTop="35dp"
                        android:elevation="4dp"/>

                    <ImageView
                        android:id="@+id/ekspresi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_alignTop="@id/bg"
                        android:layout_alignBottom="@id/bg"
                        android:layout_marginTop="-1dp"
                        android:layout_marginBottom="1dp"
                        android:elevation="5dp"
                        android:src="@drawable/emoji_1" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Daging US Beef Slice Premium\nQuality 1kg"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark_70" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Culture Tambak"
                    android:textSize="12dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/dark_10" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:progressTint="@color/primary_10">
                </androidx.appcompat.widget.AppCompatRatingBar>
                <EditText
                    android:id="@+id/ulasan"
                    android:layout_width="260dp"
                    android:layout_height="110dp"
                    android:ems="10"
                    android:paddingTop="8dp"
                    android:layout_marginTop="35dp"
                    android:hint="Kasih ulasan dulu yuk..."
                    android:importantForAutofill="no"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="#999999"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="top"
                    android:background="@drawable/edit_text_alamat"
                    android:inputType="textMultiLine"/>



                    <Button
                        android:id="@+id/batal"
                        android:layout_width="260dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="45dp"
                        android:text="Batal"
                        android:textColor="@color/primary_50"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/btn_secondaryy"/>
                    <Button
                        android:id="@+id/kirim"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        style="@style/button_primary"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Kirim"
                        android:textSize="18sp"/>



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>