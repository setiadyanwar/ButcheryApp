<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_produk"
        android:elevation="10dp"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="121dp"
            android:background="@drawable/bg_gambarproduk"
            android:id="@+id/image1"/>
        <TextView
            android:id="@+id/nama_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="8dp"
            android:text="nama Produknya"
            android:textSize="14sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/harga_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="8dp"
            android:text="Rp.200000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_toko"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/nama_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama tokonya"
                android:textSize="12sp"
                android:textColor="#999999"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_lokasi"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/alamat_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lokasi toko"
                android:textSize="12sp"
                android:textColor="@color/primary_50"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bintang"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7 | 325 terjual"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>