<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarMitra" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:src="@drawable/arrow"
            android:background="@drawable/logo_back"/>
        <TextView
            android:id="@+id/Gabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gabung Jadi Mitra Kami"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/Gabung_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dagang cukup dari rumah aja!"
            android:textSize="17dp"
            android:textColor="@color/grey_font"
            app:layout_constraintTop_toBottomOf="@+id/Gabung"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Gabung_sub"
            android:id="@+id/Gabung_hiro"
            android:contentDescription="seorang ukang daging menjaga dagangannya." />
        <TextView
            android:id="@+id/Gabung_inputLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Nama Toko Kamu"
            android:textSize="17dp"
            android:gravity="left"
            android:textColor="@color/grey_font"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text"
            android:textSize="14sp"
            android:hint="Misal: Antara Farm"
            android:textColorHint="#999999"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:text="Selanjutnya "
            style="@style/MyButtonStyle"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>