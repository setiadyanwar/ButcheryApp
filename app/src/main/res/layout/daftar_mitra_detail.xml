<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarMitraDetailActivity"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="35dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/arrow"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/Gabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gabung Jadi Mitra Kami"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/Gabung_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dagang cukup dari rumah aja!"
            android:textSize="17sp"
            android:textColor="@color/grey_font"
            app:layout_constraintTop_toBottomOf="@+id/Gabung"/>

        <ImageView
            android:id="@+id/Gabung_hiro"
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:contentDescription="Seorang perempuan tengah membuka tokonya."
            android:src="@drawable/hiro_daftarmitra"
            app:layout_constraintTop_toBottomOf="@id/Gabung_sub" />
        <TextView
            android:id="@+id/Gabung_inputLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Detail Informasi"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="start"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_none"
            android:textSize="14sp"
            android:hint="messitahaluasix@gmail.com"
            android:inputType="none"
            android:textColorHint="#999999"
            android:paddingStart="12dp"
            android:layout_marginTop="21dp"
            android:paddingEnd="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text"
            android:textSize="14sp"
            android:hint="No. Telepon"
            android:textColorHint="#999999"
            android:layout_marginTop="21dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text"
            android:textSize="14sp"
            android:hint="No. Whatsapp (Contact Person)"
            android:textColorHint="#999999"
            android:layout_marginTop="21dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text"
            android:textSize="14sp"
            android:hint="No. rekening"
            android:textColorHint="#999999"

            android:layout_marginTop="21dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:text="Masuk"
            android:textColor="@color/white"
            style="@style/MyButtonStyle"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>