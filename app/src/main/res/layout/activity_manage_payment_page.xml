                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="11dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/gratisongkirgreen"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00C851"
                        android:text="Opsi Pengiriman"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_50"
                        android:paddingStart="28dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginEnd="230dp"
                        android:text="Motor"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_50"
                        android:text="Rp9.900"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="22dp"
                    android:textColor="@color/dark_30"
                    android:text="Estimasi (1-2 Hari)"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="11dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/opsipengiriman">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginBottom="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pesan: "
                        android:textColor="@color/dark_50"/>
                    <EditText
                        android:layout_width="151dp"
                        android:layout_height="15dp"
                        android:background="@color/white"
                        android:layout_marginStart="172dp"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textColorHint="@color/dark_10"
                        android:hint="isikan pesan anda............"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringkasan Pesanan"
                        android:textStyle="bold"
                        android:textColor="@color/dark_50"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textSize="12sp"
                        android:layout_marginEnd="230dp"
                        android:textColor="@color/dark_30"/>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Rp34.600"
                        android:textSize="12sp"
                        android:textColor="@color/dark_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengiriman"
                        android:textSize="12sp"
                        android:layout_marginEnd="236dp"
                        android:textColor="@color/dark_30"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp34.600"
                        android:textSize="12sp"
                        android:textColor="@color/dark_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biaya layanan aplikasi"
                        android:textSize="12sp"
                        android:layout_marginEnd="156dp"
                        android:textColor="@color/dark_30"/>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Rp34.600"
                        android:textSize="12sp"
                        android:textColor="@color/dark_30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="16sp"
                        android:layout_marginEnd="240dp"
                        android:textColor="@color/dark_30"/>
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Rp34.600"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/dark_30"/>
                </LinearLayout>






            </LinearLayout>


        </LinearLayout>



    </ScrollView>



    <LinearLayout
        android:id="@+id/constrainbeli"
        android:layout_width="411dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="20dp"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="Total: "
            android:textColor="@color/dark_10"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rp100.000"
            android:textColor="@color/primary_50"
            android:textStyle="bold"
            android:textSize="16sp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp">

            <ImageButton
                android:id="@+id/buttonbeli"
                android:layout_width="203dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_checkout"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/buttonbeli"
                app:layout_constraintStart_toStartOf="@id/buttonbeli"
                app:layout_constraintEnd_toEndOf="@id/buttonbeli"
                app:layout_constraintBottom_toBottomOf="@id/buttonbeli"
                android:text="Buat Pesanan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:ignore="NotSibling" />
