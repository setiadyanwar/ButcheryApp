<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CARD 1 START-->
    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_daftarproduk"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="15dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar_produk"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:background="@drawable/gambar_manageproduk" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_produk"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:text=""
                    android:textColor="#2B2B2B"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/harga_produk"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/variasi"
                        android:layout_width="39dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_variasi"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/primary_50"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nama_toko"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="#999999" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true">

                    <RadioButton
                        android:id="@+id/siap"
                        android:layout_width="93dp"
                        android:layout_height="31dp"
                        android:text="Nilai"
                        android:textColor="@drawable/radio_text_selector"
                        android:background="@drawable/pesanansaya_selector"
                        android:textAlignment="center"
                        android:button="@drawable/radio_null_selector"/>
                    <RadioButton
                        android:id="@+id/dikirim"
                        android:layout_marginTop="5dp"
                        android:layout_width="93dp"
                        android:layout_height="31dp"
                        android:text="Sampai"
                        android:textColor="@drawable/radio_text_selector"
                        android:background="@drawable/pesanansaya_selector"
                        android:textAlignment="center"
                        android:button="@drawable/radio_null_selector"/>
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:textColor="@color/dark_10"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="70dp"
                android:layout_toEndOf="@id/text_status"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Dikemas"/>
        </RelativeLayout>
    </LinearLayout>
    <!-- CARD 1 FINISH-->

</androidx.constraintlayout.widget.ConstraintLayout>