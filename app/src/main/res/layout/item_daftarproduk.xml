<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- CARD 1 START-->
    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@drawable/container_daftarproduk"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar_produk"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:background="@drawable/gambar_manageproduk" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/nama_prduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2B2B2B"
                    android:text="Daging US Beef Slice\nPremium Quality 1kg"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:id="@+id/harga_produk"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp169.500"/>
                    <TextView
                        android:id="@+id/variasi"
                        android:layout_width="39dp"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_50"
                        android:text="250gr"
                        android:textSize="12sp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_variasi"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/nama_toko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="YusufAnjayMabar"
                    android:textColor="#999999"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:src="@drawable/btn_ubah"
                    android:layout_marginStart="44dp"/>
                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:src="@drawable/btn_hapus"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="44dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- CARD 1 FINISH-->

</androidx.cardview.widget.CardView>