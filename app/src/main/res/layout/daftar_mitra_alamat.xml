<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="35dp"
    android:layout_marginRight="35dp"
    tools:context=".DaftarMitraDetail">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginLeft="-10dp"
            android:id="@+id/kembali_ke_detail"
            android:background="@color/transparent"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/Gabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gabung Jadi Mitra Kami"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Gabung_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dagang cukup dari rumah aja!"
            android:textColor="@color/grey_font"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/Gabung" />

        <ImageView
            android:id="@+id/Gabung_hiro"
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:contentDescription="Seorang perempuan tengah membuka tokonya."
            android:src="@drawable/hiro_daftarmitra"
            app:layout_constraintTop_toBottomOf="@id/Gabung_sub" />

        <TextView
            android:id="@+id/Gabung_inputLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Masukkan Alamat Toko"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="21dp"
            android:paddingHorizontal="18dp"
            android:background="@drawable/edit_text"
            android:id="@+id/spinner_provinsi"
            android:textColorHint="#999999"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp">
            <Spinner
                android:layout_width="156dp"
                android:layout_height="48dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#999999"
                android:paddingHorizontal="18dp"
                android:id="@+id/spinner_kota"
                android:textSize="14sp"
                android:layout_alignParentStart="true"/>

            <Spinner
                android:layout_width="156dp"
                android:layout_height="48dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#999999"
                android:paddingHorizontal="18dp"
                android:id="@+id/spinner_kecamatan"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@drawable/edit_text"
            android:layout_marginTop="21dp"
            android:paddingTop="12dp"
            android:paddingHorizontal="18dp"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:minLines="3"
            android:gravity="top|start"
            android:hint="Alamat Detail"
            android:textColorHint="#999999"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start">
            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Dengan mendaftar, saya menyetujui"
                android:textColor="@color/grey_font"
                android:textSize="13sp"
                android:id="@+id/setuju"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/syarat_ketentuan"
                android:textColorLink="@color/primary_50"
                android:textSize="13sp"
                android:id="@+id/syarat"
                android:layout_below="@+id/setuju"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="serta"
                android:id="@+id/serta"
                android:textColor="@color/grey_font"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/syarat"
                android:layout_below="@+id/setuju"/>
            <TextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/kebijakan_privasi"
                android:textColorLink="@color/primary_50"
                android:layout_toEndOf="@+id/serta"
                android:textSize="13sp"
                android:layout_below="@+id/setuju"/>
        </RelativeLayout>

        <Button
            android:id="@+id/button_daftar_mitra"
            style="@style/MyButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Daftar"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>