<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonprimary">
        <item name="android:background">@drawable/btn_primary</item>

    </style>
    <style name="buttonSecondary">
        <item name="android:backgroundTint">@drawable/btn_ubah</item>
    </style>
    <style name="Customshadow" parent="Theme.AppCompat">
        <!-- Menentukan warna bayangan -->
        <item name="android:shadowColor">@color/custom_shadow_color</item>

        <!-- Menentukan ukuran bayangan (elevation) -->
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>