<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ButcheryApp_UI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_50</item>
        <item name="colorPrimaryVariant">@color/primary_10</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="button_primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:backgroundTint">@color/primary_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_secondlight" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:backgroundTint">@color/btn_secondaryy</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:backgroundTint">@drawable/btn_ubah</item>
    </style>

    <style name="Myratebar" parent="Widget.AppCompat.RatingBar">
<!--        saat tidak aktif-->
        <item name="colorControlNormal">@color/dark_30</item>

<!--        saat aktif-->
        <item name="colorControlActivated">@color/primary_10</item>
    </style>
</resources>